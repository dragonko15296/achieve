<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <p id="notice"><%= notice %></p>

    <%= form_for(@contact, url: confirm_contacts_path) do |f| %>

      <%= f.error_messages! %>

      <%= f.label :名前 %>
      <%= f.text_field :name, class: "form-control" %>
      <br>
      <%= f.label :メールアドレス %>
      <%= f.text_field :email, class: "form-control" %>
      <br>
      <%= f.label :内容 %>
      <%= f.text_field :content, class: "form-control" %>
      <br>
      <%= f.submit "確認", class: "btn btn-primary btn-block" %>
    <% end %>
    
    <%= link_to "トップページへ", root_path %>
  </div>
</div>