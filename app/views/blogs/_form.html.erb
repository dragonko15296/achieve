<%= form_for(@blog, url: choose_new_or_edit) do |f| %>
  <%= f.error_messages! %>
  
  <% unless @blog.id == nil %>
    <%= f.label :"投稿者:  " %>
    <%= @blog.user.name %>
    <%= f.label :"ＩＤ: " %>
    <%= @blog.user_id %>
  <% end %>
  
  <br>
  <%= f.label :タイトル %>
  <%= f.text_field :title, class: "form-control" %>
  <br>
  <%= f.label :内容 %>
  <%= f.text_field :content, class: "form-control" %>
  <br>
  <%= f.submit "投稿", class: "btn btn-primary btn-block" %>
<% end %>

<%= link_to "ブログ一覧へ", blogs_path %>